{
    "manifest_version": 2,
    "name": "GraphiQL extension",
    "version": "1.2",
    "description": "Chrome extension for the GraphiQL tool",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Launch GraphiQL",
        "default_icon": "public/logo.png"
    },
    "icons": {
        "16": "public/logo.png",
        "48": "public/logo.png",
        "128": "public/logo.png"
    },
    "permissions": [
        "http://*/",
        "https://*/",
        "storage"
    ]
}
